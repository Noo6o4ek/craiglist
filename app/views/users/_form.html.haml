= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :full_name, :class => 'control-label'
    .controls
      = f.text_field :full_name, :class => 'text_field'
  .control-group
    = f.label :login, :class => 'control-label'
    .controls
      = f.text_field :login, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :birthday, :class => 'control-label'
    .controls
      = f.text_field :birthday, :class => 'text_field'
  .control-group
    = f.label :adress, :class => 'control-label'
    .controls
      = f.text_field :adress, :class => 'text_field'
  .control-group
    = f.label :city, :class => 'control-label'
    .controls
      = f.text_field :city, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group
    = f.label :zip, :class => 'control-label'
    .controls
      = f.text_field :zip, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'

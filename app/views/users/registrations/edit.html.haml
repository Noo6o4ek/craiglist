%h2
  Edit #{resource_name.to_s.humanize}
= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', method: :put } do |f|
  = devise_error_messages!
  .control_group
    = f.input :login, autofocus: true
    = f.input :password, hint: "Leave blank if you don't want to change it"
    = f.input :password_confirmation
    - if f.object.encrypted_password.present?
      = f.input :current_password, hint: "We need your current password to confirm your changes"
    = f.input :full_name
    = f.input :email
    = f.input :birthday, as: :date
    = f.input :country
    = f.input :address
    = f.input :city
    = f.input :state
    = f.input :zip
  .form-actions
    = f.submit "Update", class: 'btn btn-success'
    = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
    = link_to "Back", :back, class: 'btn'

- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal
  %dt.strong= model_class.human_attribute_name(:full_name) + ':'
  %dd= @user.full_name
  %dt.strong= model_class.human_attribute_name(:login) + ':'
  %dd= @user.login
  %dt.strong= model_class.human_attribute_name(:email) + ':'
  %dd= @user.email
  %dt.strong= model_class.human_attribute_name(:birthday) + ':'
  %dd= @user.birthday
  %dt.strong= model_class.human_attribute_name(:country) + ':'
  %dd= @user.country
  %dt.strong= model_class.human_attribute_name(:address) + ':'
  %dd= @user.address
  %dt.strong= model_class.human_attribute_name(:city) + ':'
  %dd= @user.city
  %dt.strong= model_class.human_attribute_name(:state) + ':'
  %dd= @user.state
  %dt.strong= model_class.human_attribute_name(:zip) + ':'
  %dd= @user.zip
  - if @user.role_id?
    %dt.strong Role level:
    %dd= @user.role_name

  = gmaps4rails(@json)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn'
  - if can? :udate, @user
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn'
  - if can? :destroy, @user
    = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

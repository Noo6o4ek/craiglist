- model_class = Advert
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.row.text-center
  = image_tag @advert.image.url(:medium)
= raw RedCloth.new("#{@advert.description}", [:filter_html]).to_html

- if can? [:udate, :destroy], @advert
  .form-actions
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_advert_path(@advert), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), advert_path(@advert), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

.comments
  %h3= t('.comments')
  = render 'comments/form'
  = render partial: 'comments/comment', collection: @advert.comments, as: :comment
